{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "render",
      "program": "tasks/render.tsx",
      "cwd": "${workspaceFolder}/workspace",
      "args": [
        "--app-home",
        // "${workspaceFolder}/examples/web/1-shape",
        // "${workspaceFolder}/examples/web/3-drawio",
        // "${workspaceFolder}/examples/web/4-iac",
        "${workspaceFolder}/examples/web/5-data",
        "--debug"
      ],
      "env": {},
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "docker build",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/run.sh",
      "args": ["deno task docker-build-arm64"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "clean",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/run.sh",
      "args": ["deno task clean"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "npm build",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/run.sh",
      "args": ["deno task npm-build"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "reactiac",
      "program": "src/index.ts",
      "cwd": "${workspaceFolder}/standalone/cli",
      "args": [
        "render",
        // "json",
        // "-h",
        "--debug"
      ],
      "env": {
        // "APP_HOME": "${workspaceFolder}/examples/web/1-shape"
        "APP_HOME": "${workspaceFolder}/examples/web/5-data"
      },
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "launch test project",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/run.sh",
      "args": [
        "(cd standalone/cli ; deno task run devcontainer --debug --xworkspace /reactiac --xmounts ../../:/reactiac  --app-home ../../examples/web/1-shape)"
      ],
      "console": "integratedTerminal"
    }
  ]
}
