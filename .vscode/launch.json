{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "render",
      "program": "tasks/render.tsx",
      "cwd": "${workspaceFolder}/workspace",
      "args": [
        // "test",
        "--format",
        "tf",
        // "--tf-generateImport",
        // "--stage",
        // "state",
        "--debug"
      ],
      "env": {
        // "APP_HOME": "${workspaceFolder}/examples/web/5-data"
        "APP_HOME": "${workspaceFolder}/examples/iac/cf-site"
      },
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "tf-generate",
      "program": "tasks/tf-generate.tsx",
      "cwd": "${workspaceFolder}/workspace",
      "args": [
        "--state-json-file",
        "${workspaceFolder}/terraform-show.json",
        "--debug"
      ],
      "env": {
        "APP_HOME": "${workspaceFolder}"
      },
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "cli",
      "program": "src/index.ts",
      "cwd": "${workspaceFolder}/standalone/cli",
      "args": [
        // "render",
        // "json",
        "tf",
        "generate",
        "--state-json-file",
        "${workspaceFolder}/terraform-show.json",
        // "init",
        // "plan",
        // "apply",
        // "test",
        // "app",
        // "main",
        // "-h",
        "--debug"
      ],
      "env": {
        // "APP_HOME": "${workspaceFolder}/examples/web/1-shape"
        // "APP_HOME": "${workspaceFolder}/examples/web/5-data"
        // "APP_HOME": "${workspaceFolder}/examples/iac/cf-site"
        "APP_HOME": "${workspaceFolder}"
      },
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229,
      "console": "integratedTerminal"
    },
    {
      "name": "docker build",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "args": ["deno task docker-build-arm64"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "clean",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "args": ["deno task clean"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "npm build",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "args": ["deno task npm-build"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    },
    {
      "name": "install locally",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "args": ["deno task install-locally"],
      "cwd": "${workspaceFolder}/scripts/tasks",
      "console": "integratedTerminal"
    }
  ]
}
