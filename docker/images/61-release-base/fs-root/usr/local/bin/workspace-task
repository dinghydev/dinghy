#!/bin/bash -e

# Get the first argument as task_name
task_name="$1"
# Shift to remove the first argument, leaving remaining args in $@
shift

deno run \
  --config /dinghy/workspace/deno.jsonc \
  --lock /dinghy/workspace/deno.lock \
  --allow-all \
   --cached-only \
  /dinghy/workspace/tasks/${task_name}/index.ts \
  "$@"
