{
  "provider": {
    "aws": [
      {
        "region": "eu-west-1",
        "default_tags": {
          "tags": {
            "iac:stack-title": "Step 4 Iac",
            "iac:stack-name": "step-4-iac"
          }
        }
      }
    ]
  },
  "terraform": {
    "required_providers": {
      "aws": {
        "source": "aws",
        "version": "6.28.0"
      }
    }
  },
  "data": {
    "aws_vpc": {
      "awsvpc_vpc": {}
    }
  },
  "resource": {
    "aws_subnet": {
      "awssubnet_publicsubnet": {
        "vpc_id": "${data.aws_vpc.awsvpc_vpc.id}",
        "cidr_block": "10.0.0.0/16",
        "tags": {
          "Name": "Public Subnet",
          "iac:id": "awssubnet_publicsubnet"
        }
      },
      "awssubnet_privatesubnet": {
        "vpc_id": "${data.aws_vpc.awsvpc_vpc.id}",
        "cidr_block": "10.10.0.0/16",
        "tags": {
          "Name": "Private Subnet",
          "iac:id": "awssubnet_privatesubnet"
        }
      }
    },
    "aws_lb": {
      "awslb_loadbalancer": {
        "subnets": [
          "${aws_subnet.awssubnet_publicsubnet.id}"
        ],
        "depends_on": [
          "aws_subnet.awssubnet_publicsubnet"
        ],
        "tags": {
          "Name": "Load Balancer",
          "iac:id": "awslb_loadbalancer"
        }
      }
    },
    "aws_instance": {
      "awsinstance_application": {
        "ami": "ami-005e54dee72cc1d00",
        "subnet_id": "${aws_subnet.awssubnet_privatesubnet.id}",
        "depends_on": [
          "aws_subnet.awssubnet_privatesubnet"
        ],
        "tags": {
          "Name": "Application",
          "iac:id": "awsinstance_application"
        }
      }
    },
    "aws_db_instance": {
      "awsdbinstance_postgres": {
        "instance_class": "db.t3.micro",
        "tags": {
          "Name": "Postgres",
          "iac:id": "awsdbinstance_postgres"
        }
      }
    }
  }
}
