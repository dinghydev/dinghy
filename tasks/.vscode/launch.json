{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "docker login",
      "args": [
        "deno task aws-ecr-login"
      ],
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "env": {
        // "AWS_PROFILE": "dinghy"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "clean",
      "args": [
        "deno task clean"
      ],
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "console": "integratedTerminal"
    },
    {
      "name": "refresh-engine-lock",
      "program": "src/refresh-engine-lock.ts",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "attachSimplePort": 9229,
      "runtimeArgs": [
        "--inspect-wait",
        "--allow-all",
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "render examples",
      "args": [
        "deno task render-examples"
      ],
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "console": "integratedTerminal"
    },
    {
      "name": "release site",
      "args": [
        "deno task release-site www"
        // "deno task release-site references-diagrams"
        // "deno task release-site references-tf-aws"
      ],
      "env": {
        "CI": "true"
      },
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "console": "integratedTerminal"
    },
    {
      "name": "generate commands docs",
      "args": [],
      "program": "src/generate-commands-docs.ts",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--inspect-wait",
      ],
      "attachSimplePort": 0,
      "killBehavior": "polite",
      "console": "integratedTerminal"
    },
    {
      "name": "check projects",
      "args": [
        "deno task check-projects"
      ],
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "${workspaceFolder}/.vscode/none-debug-run.sh",
      "console": "integratedTerminal"
    },
    {
      "name": "install locally",
      "program": "src/install-locally.ts",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "attachSimplePort": 9229,
      "runtimeArgs": [
        "--inspect-wait",
        "--allow-all",
      ],
      "console": "integratedTerminal"
    }
  ]
}